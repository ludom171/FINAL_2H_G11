<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_ingreso_registro">

    <LinearLayout
        android:id="@+id/vehiculos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="79dp"
        tools:layout_editor_absoluteY="16dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/tools" />

        <Button
            android:id="@+id/btn_editar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/fondotexto"
            android:onClick="Editar"
            android:text="Editar"
            android:textSize="24sp" />/>

        <Button
            android:id="@+id/btn_eliminar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/fondotexto"
            android:onClick="Eliminar"
            android:text="Eliminar"
            android:textSize="24sp" />/>

        <Button
            android:id="@+id/btn_insertar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/fondotexto"
            android:onClick="Insertar"
            android:text="Insertar"
            android:textSize="24sp" />/>

        <Button
            android:id="@+id/btn_listar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/fondotexto"
            android:onClick="Listar"
            android:text="Listar"
            android:textSize="24sp" />/>

        <Button
            android:id="@+id/btn_buscar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/fondotexto"
            android:onClick="Buscar"
            android:text="Buscar"
            android:textSize="24sp" />/>

        <Button
            android:id="@+id/button9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/fondotexto"
            android:onClick="Desconectar"
            android:text="Regresar"
            android:textSize="24sp" />/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>